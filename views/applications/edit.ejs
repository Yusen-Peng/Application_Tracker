<h2 class='page-header'>Edit existing application</h2>
<!--send a put request to /applications/{id} route -->
<!--the form is a multipart form-->
<form action='/applications/<%= application.id %>?_method=PUT' method='POST' enctype="multipart/form-data">
    <%- include('_form_field.ejs')%>
    <div class="form-row form-row-end btn-row">
        <!--cancel the creation of a new company-->
        <a class="btn btn-dangerous" href='/applications'>Cancel</a>
        <!--submit the form-->
        <button class="btn btn-primary" type='submit'>Update</button>
    </div>
</form>